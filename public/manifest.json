{
  "name": "My Wallet Extension",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup.html",
    "default_title": "Connect Wallet"
  },
  "permissions": ["scripting", "storage"],
  "background": {
    "service_worker": "assets/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["assets/contentScript.js"],
      "run_at": "document_start"
    }
  ],

  "web_accessible_resources": [
    {
      "resources": [
        "connect.html",
        "assets/injectedProvider.js" 
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
